<div id="pageTitle">
    <h1>New MyTask</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @mytask.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Name: </td>
    			  <td class="itemValue"><input type="text" name="mytask[name]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Description: </td>
    			  <td class="itemValue"><input type="text" name="mytask[description]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Startdate: </td>
    			  <td class="itemValue"><input type="text" name="mytask[startdate]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Enddate: </td>
    			  <td class="itemValue"><input type="text" name="mytask[enddate]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Priority: </td>
    			  <td class="itemValue"><input type="text" name="mytask[priority]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Category: </td>
    			  <td class="itemValue"><input type="text" name="mytask[category]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Location: </td>
    			  <td class="itemValue"><input type="text" name="mytask[location]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>