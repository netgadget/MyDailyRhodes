<div id="pageTitle">
		<h1>Edit <%= @mytask.name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @mytask.object %>
    <%= link_to "Delete", :action => :delete, :id => @mytask.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @mytask.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="mytask[name]" value="<%= @mytask.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="mytask[description]" value="<%= @mytask.description %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Startdate: </td>
              			<td class="itemValue"><input type="text" name="mytask[startdate]" value="<%= @mytask.startdate %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Enddate: </td>
              			<td class="itemValue"><input type="text" name="mytask[enddate]" value="<%= @mytask.enddate %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Priority: </td>
              			<td class="itemValue"><input type="text" name="mytask[priority]" value="<%= @mytask.priority %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Category: </td>
              			<td class="itemValue"><input type="text" name="mytask[category]" value="<%= @mytask.category %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Location: </td>
              			<td class="itemValue"><input type="text" name="mytask[location]" value="<%= @mytask.location %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
