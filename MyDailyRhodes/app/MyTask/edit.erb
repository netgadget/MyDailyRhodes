<div class="pageTitle">
  <h1>Edit <%= @mytask.name %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :show, :id => @mytask.object %>">Cancel</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :delete, :id => @mytask.object %>">Delete</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @mytask.object %>"/>
    <ul>
      
          <li>
            <label for="mytask[name]" class="fieldLabel">Name</label>
            <input type="text" name="mytask[name]" value="<%= @mytask.name %>" <%= placeholder( "Name" ) %> />
          </li>
      
          <li>
            <label for="mytask[description]" class="fieldLabel">Description</label>
            <input type="text" name="mytask[description]" value="<%= @mytask.description %>" <%= placeholder( "Description" ) %> />
          </li>
      
          <li>
            <label for="mytask[startdate]" class="fieldLabel">Startdate</label>
            <input type="text" name="mytask[startdate]" value="<%= @mytask.startdate %>" <%= placeholder( "Startdate" ) %> />
          </li>
      
          <li>
            <label for="mytask[enddate]" class="fieldLabel">Enddate</label>
            <input type="text" name="mytask[enddate]" value="<%= @mytask.enddate %>" <%= placeholder( "Enddate" ) %> />
          </li>
      
          <li>
            <label for="mytask[priority]" class="fieldLabel">Priority</label>
            <input type="text" name="mytask[priority]" value="<%= @mytask.priority %>" <%= placeholder( "Priority" ) %> />
          </li>
      
          <li>
            <label for="mytask[category]" class="fieldLabel">Category</label>
            <input type="text" name="mytask[category]" value="<%= @mytask.category %>" <%= placeholder( "Category" ) %> />
          </li>
      
          <li>
            <label for="mytask[location]" class="fieldLabel">Location</label>
            <input type="text" name="mytask[location]" value="<%= @mytask.location %>" <%= placeholder( "Location" ) %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Update"/>
  </form>
</div>